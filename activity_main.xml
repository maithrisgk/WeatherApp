<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003049"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:rowCount="2"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:rowOrderPreserved="true"
    android:columnOrderPreserved="true"
    android:columnCount="2"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.maithri.myproject.MainActivity">

    <Button
        android:layout_width="160dp"
        android:layout_height="220dp"

        android:id="@+id/btn3"
        android:background="#FCBF49"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="My Locations" />


    <Button
        android:text="add city"
        android:layout_width="160dp"
        android:layout_height="220dp"

       android:paddingRight="@dimen/activity_vertical_margin"
        android:background="#D62828"
        android:paddingLeft="20dp"
        android:id="@+id/btn2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:text="Check weather"
        android:layout_width="160dp"
        android:layout_height="220dp"

        android:background="#F77F00"
        android:id="@+id/btn1"
        android:paddingRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:text="about us "
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:background="#0099cc"
        android:paddingLeft="20dp"

        android:textAlignment="center"
        android:id="@+id/btn4"
        android:layout_alignTop="@+id/btn3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</GridLayout>
